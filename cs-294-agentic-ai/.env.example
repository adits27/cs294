# =============================================================================
# Multi-Agent A/B Testing Validation System - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# API Server Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Public URL Configuration (Required for AgentBeats.com)
# -----------------------------------------------------------------------------
# Set this to your public-facing URL when deployed
# Example: https://your-domain.com or https://your-agent.agentbeats.com
PUBLIC_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# LLM Provider API Keys
# -----------------------------------------------------------------------------
# Google Gemini API Key (required for Gemini models - DEFAULT)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API Key (optional - only if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional - only if using Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# -----------------------------------------------------------------------------
# A2A Protocol Configuration
# -----------------------------------------------------------------------------
# AgentBeats API Key (if required for registration)
AGENTBEATS_API_KEY=your_agentbeats_api_key_here

# Webhook URL for async notifications (optional)
WEBHOOK_URL=

# Session timeout in seconds (default: 3600 = 1 hour)
SESSION_TIMEOUT_SECONDS=3600

# -----------------------------------------------------------------------------
# Authentication (Optional)
# -----------------------------------------------------------------------------
# API Key for protecting your endpoints (optional)
API_KEY=your_secret_api_key_here

# Enable/disable authentication (true/false)
REQUIRE_AUTH=false

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
MAX_CONCURRENT_SESSIONS=10

# -----------------------------------------------------------------------------
# Database/Storage (Optional - for production)
# -----------------------------------------------------------------------------
# Redis URL for session storage (optional, defaults to in-memory)
# REDIS_URL=redis://localhost:6379/0

# Database URL for persistent storage (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/ab_test_validation

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Allowed origins (comma-separated, or * for all)
CORS_ORIGINS=*

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
# Default model for agents (openai/anthropic)
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4

# Temperature for LLM responses (0.0 - 1.0)
LLM_TEMPERATURE=0.1

# Maximum tokens for LLM responses
LLM_MAX_TOKENS=2000

# -----------------------------------------------------------------------------
# Validation Configuration
# -----------------------------------------------------------------------------
# Threshold for GOOD/BAD decision (0-100)
VALIDATION_THRESHOLD=70.0

# Enable/disable specific validators
ENABLE_DATA_VALIDATION=true
ENABLE_CODE_VALIDATION=true
ENABLE_REPORT_VALIDATION=true
ENABLE_STATISTICAL_VALIDATION=true

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------
# Enable detailed logging
DEBUG=false

# Log file path (optional, defaults to stdout)
# LOG_FILE=/var/log/ab-test-validation.log

# Enable performance metrics
ENABLE_METRICS=false

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Enable auto-reload in development
DEV_MODE=true

# Mock agents (use dummy agents instead of real LLM calls)
USE_MOCK_AGENTS=false
